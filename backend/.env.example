# .env.example
# Environnement
NODE_ENV=development
PORT=3000

# Base de données MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=showme
DB_USER=showme_user
DB_PASSWORD=showme_pass
DB_ROOT_PASSWORD=root123

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration
EMAIL_FROM=noreply@showme.app
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# Storage Configuration
STORAGE_PROVIDER=s3
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# AWS S3 / MinIO Configuration
AWS_S3_BUCKET=showme-uploads
AWS_REGION=eu-west-3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_ENDPOINT=http://localhost:9000

# MinIO (alternative locale à S3)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# URLs de l'application
FRONTEND_URL=https://app.showme.com
ADMIN_URL=https://admin.showme.com
API_URL=https://api.showme.com
CARD_BASE_URL=https://showme.app/u

# Feature flags
REGISTRATION_ENABLED=true
EMAIL_VERIFICATION_REQUIRED=false
ANALYTICS_ENABLED=true